<Window
    x:Class="MusicApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicApp"
    xmlns:controls="using:MusicApp.Controls"
    xmlns:cvt="using:MusicApp.Converters"
    xmlns:vm="using:MusicApp.Core.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Loaded="OnGridLoaded">
        <Grid.Resources>
            <Style TargetType="Button" BasedOn="{StaticResource ControlButton}"/>
            <Style TargetType="ToggleButton" BasedOn="{StaticResource ControlToggleButton}"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid x:Name="HeaderGrid" Margin="0,0,0,10">
            <Grid.Resources>
                <Style TargetType="FontIcon">
                    <Setter Property="FontSize" Value="10"/>
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Column="1" Grid.Row="0"
                Text="MusicApp" 
                VerticalAlignment="Center"
                Margin="0,0,0,4"/>

            <StackPanel
                x:Name="WindowControlsPanel"
                Grid.Column="2" Grid.Row="0"
                Orientation="Horizontal">

                <Button Command="{x:Bind MinimizeCommand}">
                    <FontIcon Glyph="&#xE921;"/>
                </Button>

                <Button Command="{x:Bind CloseCommand}">
                    <FontIcon Glyph="&#xE8BB;"/>
                </Button>
            </StackPanel>

            <Border 
                Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"
                MaxHeight="96"
                CornerRadius="8" Margin="12,12,12,0" VerticalAlignment="Top">

                <Image
                    Visibility="{x:Bind cvt:Helpers.VisibleIf(PlayerViewModel.IsActivePlayback), Mode=OneWay}"
                    Source="{x:Bind cvt:Helpers.LoadCover(PlayerViewModel.MediaItemCover), Mode=OneWay}"
                    Stretch="UniformToFill"/>
            </Border>

            <StackPanel 
                Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1">

                <TextBlock
                    Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1"
                    Style="{ThemeResource SubtitleTextBlockStyle}"
                    Text="{x:Bind PlayerViewModel.MediaItem.Title, Mode=OneWay}"
                    Visibility="{x:Bind cvt:Helpers.VisibleIf(PlayerViewModel.IsActivePlayback), Mode=OneWay}"/>

                <TextBlock 
                    Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2"
                    VerticalAlignment="Top"
                    TextWrapping="Wrap"
                    Visibility="{x:Bind cvt:Helpers.VisibleIf(PlayerViewModel.IsActivePlayback), Mode=OneWay}">
          
                    <Run Text="{x:Bind PlayerViewModel.MediaItem.Album, Mode=OneWay}"/>
                    
                    <Run Text="{x:Bind PlayerViewModel.MediaItem.Artist, Mode=OneWay}"
                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </TextBlock>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                IsEnabled="{x:Bind PlayerViewModel.CanGoPrevious, Mode=OneWay}"
                Command="{x:Bind PlayerViewModel.GoPreviousCommand}">

                <Button.Content>
                    <FontIcon Glyph="&#xE892;">
                        <FontIcon.RenderTransform>
                            <TranslateTransform X="-1"/>
                        </FontIcon.RenderTransform>
                    </FontIcon>
                </Button.Content>
            </Button>

            <Button 
                Grid.Column="1"
                Style="{StaticResource PlayButton}"
                Command="{x:Bind PlayerViewModel.TogglePlaybackCommand}">

                <Button.Content>
                    <Grid>
                        <FontIcon
                            Visibility="{x:Bind cvt:Helpers.VisibleIfNot(PlayerViewModel.IsPlaying), Mode=OneWay}"
                            Glyph="&#xF5B0;">

                            <FontIcon.RenderTransform>
                                <TranslateTransform X="0.5" Y="0.5"/>
                            </FontIcon.RenderTransform>
                        </FontIcon>
                        <FontIcon 
                            Visibility="{x:Bind cvt:Helpers.VisibleIf(PlayerViewModel.IsPlaying), Mode=OneWay}"
                            Glyph="&#xF8AE;">

                            <FontIcon.RenderTransform>
                                <TranslateTransform X="0.5" Y="0.5"/>
                            </FontIcon.RenderTransform>
                        </FontIcon>
                    </Grid>
                </Button.Content>
            </Button>

            <Button
                Grid.Column="2"
                IsEnabled="{x:Bind PlayerViewModel.CanGoNext, Mode=OneWay}"
                Command="{x:Bind PlayerViewModel.GoNextCommand}">

                <Button.Content>
                    <FontIcon Margin="2,0,0,0" Glyph="&#xE893;">
                        <FontIcon.RenderTransform>
                            <TranslateTransform X="1"/>
                        </FontIcon.RenderTransform>
                    </FontIcon>
                </Button.Content>
            </Button>

            <controls:AppSlider
                Grid.Column="3"
                IsEnabled="{x:Bind PlayerViewModel.IsActivePlayback, Mode=OneWay}"
                Margin="8,0,8,0"
                VerticalAlignment="Center"
                MaxValue="{x:Bind PlayerViewModel.Duration, Mode=OneWay}"
                NavigationStepFrequency="10"
                StepFrequency="1"
                Value="{x:Bind PlayerViewModel.Position, Mode=OneWay}"
                ValueConverter="{x:Bind TimeValueConverter}"
                PositionCommand="{x:Bind PlayerViewModel.PositionCommand, Mode=OneWay}"/>

            <Button
                IsEnabled="{x:Bind PlayerViewModel.IsActivePlayback, Mode=OneWay}"
                Grid.Column="4"
                FontFamily="Cascadia Mono"
                FontSize="12"
                VerticalAlignment="Center"
                Style="{StaticResource ControlButton}"
                Padding="2">

                <Grid Padding="4,2">
                    <TextBlock 
                        TextAlignment="Center"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{x:Bind cvt:Helpers.ToTimeString(PlayerViewModel.Position), Mode=OneWay}"/>

                </Grid>
            </Button>


        </Grid>

        <ScrollView Grid.Row="2" Margin="0,10,0,10">
            <ItemsRepeater ItemsSource="{x:Bind PlaylistViewModel.Items}">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="vm:PlaylistItemViewModel">
                        <controls:AppItemContainer 
                            Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            Margin="12,2"
                            x:Name="Container"
                            Padding="4" 
                            DoubleClickMode="True"
                            IsSelected="{x:Bind IsCurrent, Mode=OneWay}"
                            Command="{x:Bind PlayCommand}" 
                            CommandParameter="{x:Bind MediaItem}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Margin="8,4">
                                    <Run Text="{x:Bind MediaItem.Title, Mode=OneWay}"/>
                                    <Run Text="&#x2013;" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <Run Text="{x:Bind MediaItem.Artist, Mode=OneWay}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </TextBlock>

                                <TextBlock 
                                    Grid.Column="1" 
                                    Margin="8,4"
                                    FontFamily="Cascadia Mono"
                                    FontSize="12"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind cvt:Helpers.ToString(MediaItem.Duration), Mode=OneWay}"/>
                            </Grid>
                        </controls:AppItemContainer>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollView>

        <Border 
            Grid.Row="3"           
            Padding="2"
            CornerRadius="0"
            BorderThickness="0,1,0,0"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush}">

            <Grid>
                <Grid.Resources>
                    <Style TargetType="FontIcon">
                        <Setter Property="FontSize" Value="14"/>
                    </Style>
                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Button Command="{x:Bind PlaylistViewModel.AddCommand, Mode=OneWay}">
                        <Button.Content>
                            <FontIcon Glyph="&#xF8AA;"/>
                        </Button.Content>
                    </Button>

                    <Button Command="{x:Bind PlaylistViewModel.RemoveAllCommand, Mode=OneWay}">
                        <Button.Content>
                            <FontIcon Glyph="&#xE74D;"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ToggleButton IsChecked="{x:Bind PlaylistViewModel.IsShuffleMode, Mode=TwoWay}">
                        <ToggleButton.Content>
                            <FontIcon Glyph="&#xE8B1;"/>
                        </ToggleButton.Content>
                    </ToggleButton>

                    <ToggleButton IsChecked="{x:Bind PlaylistViewModel.IsRepeatMode, Mode=TwoWay}">
                        <ToggleButton.Content>
                            <FontIcon Glyph="&#xE8EE;"/>
                        </ToggleButton.Content>
                    </ToggleButton>

                    <Button>
                        <Button.Content>
                            <FontIcon 
                                Margin="0,0,0,0"
                                Glyph="{x:Bind cvt:Helpers.ToVolumeIcon(PlayerViewModel.Volume), Mode=OneWay}" />
                        </Button.Content>

                        <Button.Flyout>
                            <Flyout x:Name="VolumeFlyout" Placement="Bottom">
                                <Grid Margin="0,-8" MinWidth="200" MaxWidth="300">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <FontIcon 
                                        Grid.Column="0"
                                        Margin="0,0,8,0"
                                        FontSize="16"
                                        Glyph="{x:Bind cvt:Helpers.ToVolumeIcon(PlayerViewModel.Volume), Mode=OneWay}" />

                                    <controls:AppSlider 
                                        Grid.Column="1"
                                        Margin="5,0,5,0"
                                        MaxValue="100"
                                        NavigationStepFrequency="10"
                                        StepFrequency="1"
                                        ShowToolTip="False"
                                        PositionCommand="{x:Bind PlayerViewModel.VolumeCommand}"
                                        Value="{x:Bind PlayerViewModel.Volume, Mode=OneWay}"/>

                                    <TextBlock
                                        Grid.Column="2"
                                        MinWidth="30"
                                        Margin="0,0,-4,0"
                                        TextAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind PlayerViewModel.Volume, Mode=OneWay}"/>
                                </Grid>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                    <Button>
                        <Button.Content>
                            <FontIcon Margin="0,0,0,0" Glyph="&#xE712;" />
                        </Button.Content>

                        <Button.Flyout>
                            <MenuFlyout x:Name="MenuFlyout">
                                <MenuFlyoutItem
                                    Command="{x:Bind SettingsCommand}"
                                    Text="Settings" />

                                <MenuFlyoutSeparator/>

                                <MenuFlyoutItem
                                    Command="{x:Bind CloseCommand}"
                                    Text="Exit" />
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>