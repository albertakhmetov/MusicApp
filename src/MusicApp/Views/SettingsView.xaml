<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MusicApp.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top">
        <Grid.Resources>
            <Style TargetType="Border">
                <Style.Setters>
                    <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
                    <Setter Property="CornerRadius" Value="4"/>
                    <Setter Property="Padding" Value="16"/>
                    <Setter Property="Margin" Value="24,6"/>
                    <Setter Property="MinHeight" Value="60"/>
                </Style.Setters>
            </Style>
        </Grid.Resources>

        <StackPanel Orientation="Vertical">
            <Border>
                <Grid MinWidth="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <FontIcon 
                        Glyph="&#xE790;" 
                        VerticalAlignment="Center" 
                        Margin="0,0,12,0"/>
                    <TextBlock 
                        Grid.Column="1" 
                        VerticalAlignment="Center" 
                        Text="Window Theme"/>
                    <ComboBox 
                        Grid.Column="2" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Stretch"
                        SelectedItem="{x:Bind ViewModel.WindowTheme, Mode=TwoWay}"
                        ItemsSource="{x:Bind ViewModel.WindowThemes, Mode=OneWay}"/>
                </Grid>
            </Border>

            <Border>
                <Grid MinWidth="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <FontIcon 
                        Glyph="&#xECAA;" 
                        VerticalAlignment="Center" 
                        Margin="0,0,12,0"/>

                    <TextBlock Grid.Column="1" VerticalAlignment="Center"  Text="Integration with default apps"/>

                    <ToggleSwitch 
                        HorizontalAlignment="Stretch"
                        Grid.Column="2"

                        IsOn="{x:Bind ViewModel.IsAppRegistred,Mode=TwoWay}"/>
                </Grid>
            </Border>

            <StackPanel 
                Grid.Row="2"            
                Orientation="Vertical"
                Margin="24,12">

                <TextBlock
                    Style="{ThemeResource SubtitleTextBlockStyle}"
                    Margin="4">
                    <Run Text="{x:Bind ViewModel.ProductName}"/>
                    <Run Text="{x:Bind ViewModel.Version}"/>
                </TextBlock>

                <TextBlock 
                    Text="{x:Bind ViewModel.LegalCopyright}"
                    Style="{ThemeResource BodyStrongTextBlockStyle}"
                    Margin="4"/>

                <TextBlock 
                    Text="{x:Bind ViewModel.ProductDescription}"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    HorizontalAlignment="Stretch"
                    Margin="4,8"/>

                <TextBlock 
                    Text="{x:Bind ViewModel.ProductVersion}"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    HorizontalAlignment="Stretch"
                    Margin="4,8"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
